<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SelectActivity"
    tools:showIn="@layout/app_bar_select">

    <ImageButton
        android:id="@+id/itemNewsPaper"
        android:layout_width="337dp"
        android:layout_height="199dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/editshape"
        android:src="@drawable/newspapericon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/itemElectronics"
        android:layout_width="337dp"
        android:layout_height="199dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/editshape"
        android:src="@drawable/electronicsicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ImageButton
        android:id="@+id/itemPlastic"
        android:layout_width="337dp"
        android:layout_height="199dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/editshape"
        android:src="@drawable/plasticicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemElectronics" />

    <ImageButton
        android:id="@+id/itemIronBar"
        android:layout_width="337dp"
        android:layout_height="199dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/editshape"
        android:src="@drawable/metalicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemPlastic" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/editshape"
        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemIronBar" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="337dp"
        android:layout_height="29dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/editshape"
        android:gravity="center_horizontal"
        android:text="NEWSPAPER"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemNewsPaper" />


</android.support.constraint.ConstraintLayout>
</ScrollView>